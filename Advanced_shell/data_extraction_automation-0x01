#!/bin/bash

# Ensure data.json exists
if [ ! -f data.json ]; then
  echo "data.json not found!"
  exit 1
fi

# Extract values using jq
name=$(jq -r '.name' data.json | sed 's/.*/\u&/')  # Capitalize name
type=$(jq -r '.types[0].type.name' data.json | sed 's/.*/\u&/')  # Capitalize type
height=$(jq -r '.height' data.json)
weight=$(jq -r '.weight' data.json)

# Convert units using required variable names
formatted_height=$(awk "BEGIN { printf \"%.1f\", $height / 10 }")
formatted_weight=$(awk "BEGIN { printf \"%.0f\", $weight / 10 }")

# Use the required string format (copy-paste this EXACT line)
echo "$name is of type $type, weighs ${formatted_weight}kg, and is ${formatted_height}m tall."
