#!/bin/bash

# Set the output file
output_file="pokemon_report.csv"

# Write header
echo "Name,Height (m),Weight (kg)" > "$output_file"

# Process each JSON file in pokemon_data
for file in pokemon_data/*.json; do
    # Extract name, height (dm), and weight (hg)
    name=$(jq -r '.name' "$file" | sed 's/.*/\u&/')  # Capitalize first letter
    height=$(jq -r '.height' "$file")
    weight=$(jq -r '.weight' "$file")

    # Convert to meters and kilograms
    height_m=$(awk "BEGIN { printf \"%.1f\", $height / 10 }")
    weight_kg=$(awk "BEGIN { printf \"%.1f\", $weight / 10 }")

    # Append to CSV
    echo "$name,$height_m,$weight_kg" >> "$output_file"
done

# Print path to report
echo "CSV Report generated at: $output_file"
echo ""

# Display CSV content
cat "$output_file"

# Compute averages with awk (skip header using NR > 1)
awk -F, 'NR > 1 {
    total_height += $2;
    total_weight += $3;
    count += 1
}
END {
    avg_height = total_height / count;
    avg_weight = total_weight / count;
    printf "\nAverage Height: %.2f m\n", avg_height;
    printf "Average Weight: %.2f kg\n", avg_weight;
}' "$output_file"
